<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id='screen' onKeyPressed='#okButtonPressed' xmlns:fx="http://javafx.com/fxml/1" prefHeight="150"
	prefWidth="300" stylesheets="resources/defaultTheme.css" styleClass="backgroundA"
	fx:controller="messages.ConfirmController" >
	<children>
		<HBox prefHeight="20" prefWidth="300" alignment="CENTER_LEFT"
			style="-fx-background-color:dodgerblue;">
			<children>
				<Label text="Confirm" prefWidth="60" alignment="CENTER_RIGHT"
					styleClass="messageHeader" />
			</children>
		</HBox>
		<Label fx:id="confirmationInfo" text="test" layoutY="50" prefWidth="270"
			layoutX="15" wrapText="true" styleClass="messageText" />
		<Button fx:id="okButton" text="OK" onAction="#okButtonPressed"
			layoutX="130" layoutY="120" prefWidth="80" />
		<Button fx:id="cancelButton" text="Cancel" onAction="#cancelButtonPressed"
			layoutX="215" layoutY="120" prefWidth="80" />
	</children>
</AnchorPane>

