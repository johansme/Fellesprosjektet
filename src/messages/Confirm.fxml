<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="150" prefWidth="300">
	<children>
		<HBox prefHeight="20" prefWidth="300" style="-fx-background-color:dodgerblue;">
			<children>
				<Label text="Confirm" />
			</children>
		</HBox>
		<Label fx:id="confirmationInfo" text="test" layoutY="50" />
		<Button fx:id="okButton" text="OK" onAction="#okButtonPressed" 
		layoutX="110" layoutY="120" prefWidth="80"/>
		<Button fx:id="cancelButton" text="Cancel" onAction="#cancelButtonPressed"
		layoutX="200" layoutY="120" prefWidth="80" />
	</children>
</AnchorPane>

